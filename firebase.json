{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/*.html"
    ],
    "headers": [{
      "source" : "**/css/*.@(css)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      }]
    }, {
      "source" : "/img/**",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      }]
    }, {
      "source" : "**/js/*.@(js)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=604800"
      }]
    }]
  }
}
